{
  "name": "swagger-to-localdb-cli",
  "version": "0.2.0",
  "description": "CLI tool that generates TypeScript API files with IndexedDB mock implementations from Swagger/OpenAPI specifications",
  "main": "dist/index.js",
  "bin": {
    "swagger-to-localdb": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "swagger",
    "openapi",
    "typescript",
    "indexeddb",
    "mock",
    "api",
    "cli",
    "code-generation",
    "frontend",
    "development",
    "mock-server",
    "local-development",
    "react",
    "vue",
    "angular"
  ],
  "author": {
    "name": "Joel Fraga",
    "email": "3393221+cupojoe@users.noreply.github.com",
    "url": "https://github.com/cupojoe"
  },
  "license": "MIT",
  "homepage": "https://github.com/cupojoe/swagger-to-localdb-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cupojoe/swagger-to-localdb-cli.git"
  },
  "bugs": {
    "url": "https://github.com/cupojoe/swagger-to-localdb-cli/issues"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "swagger-parser": "^10.0.3",
    "handlebars": "^4.7.8",
    "yaml": "^2.3.4",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "prettier": "^3.1.1"
  },
  "files": [
    "dist",
    "templates"
  ],
  "engines": {
    "node": ">=22.0.0"
  }
}